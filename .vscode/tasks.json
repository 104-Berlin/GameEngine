{
    "tasks": [
        {
            "type": "shell",
            "label": "shell: cl.exe build main file",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/NODEFAULTLIB",
                "-MD",
                "/Fe:",
                "${workspaceFolder}\\main.exe",
                "/I",
                "${workspaceFolder}\\include",
                "/I",
                "${workspaceFolder}\\..\\glfw\\include",
                "${workspaceFolder}\\**\\**.cpp",
                "${workspaceFolder}\\..\\glfw\\build\\src\\Debug\\glfw3.lib",
                "user32.lib",
                "gdi32.lib",
                "shell32.lib",
                "opengl32.lib"
            ],
            "problemMatcher": [
                "$msCompile"
            ],
            "group": "build",
            "osx":{
                "command": "clang++", 
                "args": [
                    "-I",
                    "${workspaceFolder}/include",
                    "-I",
                    "${workspaceFolder}/../glfw/include",
                    "-g",
                    "-o",
                    "main",
                    "${workspaceFolder}/**/**.cpp",
                    "${workspaceFolder}/../glfw/build/src/libglfw3.a",
                    "-framework",
                    "Cocoa",
                    "-framework",
                    "OpenGL",
                    "-framework",
                    "IOKit"
                ]
            }
        }
    ],
    "version": "2.0.0"
}